<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false" >

        <!-- Left column. Equal weight with right column gives them equal width. -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@color/search_card"
            android:orientation="vertical" >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F"
                app:cardElevation="1dp"
                app:cardCornerRadius="20dp"
                android:background="@color/search_card"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/search_card"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/search_header"


                        >

                        <ImageView
                            android:id="@+id/trending"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="8dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="20dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_trending_up_black_24dp"
                            />

                        <TextView
                            android:id="@+id/secTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:padding="8dp"
                            android:paddingLeft="0dp"
                            android:gravity="center"
                            android:text="Trending"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="16dp"
                            android:visibility="visible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:background="@drawable/search_card"

                        >
                        <View
                            android:layout_width="3dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:background="#375137" />
                        <Button
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Hello1"
                            android:textSize="11sp"
                            android:textAlignment="textStart"
                            android:padding="8dp"
                            android:background="@drawable/search_card"
                            android:layout_marginRight="18dp"
                            android:layout_gravity="top"
                            android:id="@+id/trending1"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:background="@drawable/search_card"

                        >
                        <View
                            android:layout_width="3dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:background="#436143" />
                        <Button
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Hello2"
                            android:textSize="11sp"
                            android:textAlignment="textStart"
                            android:padding="8dp"
                            android:background="@drawable/search_card"
                            android:layout_marginRight="18dp"
                            android:layout_gravity="top"
                            android:id="@+id/trending2"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:background="@drawable/search_card"

                        >
                        <View
                            android:layout_width="3dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:background="#5A835A" />
                        <Button
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Hello3"
                            android:textSize="11sp"
                            android:textAlignment="textStart"
                            android:padding="8dp"
                            android:background="@drawable/search_card"
                            android:layout_marginRight="18dp"
                            android:layout_gravity="top"
                            android:id="@+id/trending3"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:background="@drawable/search_card"

                        >
                        <View
                            android:layout_width="3dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:background="#78AF78" />
                        <Button
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Hello4"
                            android:textSize="11sp"
                            android:textAlignment="textStart"
                            android:padding="8dp"
                            android:background="@drawable/search_card"
                            android:layout_marginRight="18dp"
                            android:layout_gravity="top"
                            android:id="@+id/trending4"

                            />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- Fill width of layout and put all the extra space here. -->

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="G" />
        </LinearLayout>

        <!-- Right column. Equal weight with left column gives them equal width. -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical"

            >

            <!-- Same as above except top button gets all the extra space. -->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="1dp"
                app:cardCornerRadius="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80121212"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/recent"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:maxHeight="2dp"
                        app:srcCompat="@drawable/ic_history_black_24dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:id="@+id/thirdTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/recent"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="Recent"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="20dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/B"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/thirdTxt"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="43dp"
                        android:background="@drawable/square"
                        android:gravity="center"
                        android:maxHeight="2dp"
                        android:text="B"
                        android:textColor="#A598EA"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/recent1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thirdTxt"
                        android:layout_toRightOf="@+id/B"
                        android:layout_marginTop="40dp"
                        android:text="Benevolent"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/PrimaryFlatButton" />



                    <TextView
                        android:id="@+id/B1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:maxHeight="2dp"
                        android:background="@drawable/square"
                        android:layout_below="@+id/B"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="40dp"
                        android:text="B"
                        android:textColor="#A598EA"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <Button
                        android:id="@+id/recent2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/recent1"
                        android:layout_toRightOf="@+id/B"
                        android:layout_marginTop="42dp"
                        android:text="Benevolent"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/PrimaryFlatButton" />



                    <TextView
                        android:id="@+id/B2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:maxHeight="2dp"
                        android:background="@drawable/square"
                        android:layout_below="@+id/B1"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="40dp"
                        android:text="B"
                        android:textColor="#A598EA"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <Button
                        android:id="@+id/recent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/recent2"
                        android:layout_toRightOf="@+id/B"
                        android:layout_marginTop="43dp"
                        android:text="Benevolent"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/PrimaryFlatButton" />
                </RelativeLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>